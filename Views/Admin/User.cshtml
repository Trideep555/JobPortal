@{
    Layout = "_AdminLayout";
}

<div class="card shadow border-0 mb-7 " style="width: 75vw;height: 80vh;">
    <div class="card-header">
        <h5 class="mb-0">Users</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-nowrap">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Date of Joining</th>
                    <th scope="col">Country</th>
                    <th scope="col">Jobs Applied</th>
                    <th scope="col">Phone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for(int i=0;i<ViewBag.users.Count;i++){
                <tr>
                    <td>
                            <img alt="..." src="~/@ViewBag.users[i].Image" class="avatar avatar-sm rounded-circle me-2">
                        <a class="text-heading font-semibold" href="#">
                                @(ViewBag.users[i].First_Name + ViewBag.users[i].Last_Name)
                        </a>
                    </td>
                    <td>
                            @ViewBag.users[i].DOJ.Split(" ")[0]
                    </td>
                    <td>
                        <a class="text-heading font-semibold" href="#">
                                @ViewBag.users[i].Country
                        </a>
                    </td>
                    <td>
                            @ViewBag.apply[i]
                    </td>
                    <td>
                        <span class="badge badge-lg badge-dot">
                                @ViewBag.users[i].Phone
                        </span>
                    </td>
                    <td class="text-end">
                            <a href="/Home/Profile/@ViewBag.users[i].UserId" class="btn btn-sm btn-neutral">View</a>
                        <!-- <button type="button" class="btn btn-sm btn-square btn-neutral text-danger-hover">
                            <i class="bi bi-trash"></i>
                        </button> -->
                    </td>
                </tr>
                }
                
            </tbody>
        </table>
    </div>
    <div class="card-footer border-0 py-5">
        <span class="text-muted text-sm"> @ViewBag.users.Count Users</span>
    </div>
</div>
