@model AdminVM
@{
    Layout = "_AdminLayout";
}


<div class="card shadow border-0 mb-7 " style="width: 75vw;height: 80vh;">
    <div class="card-header">
        <h5 class="mb-0">Admin</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-nowrap">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var i in ViewBag.users){
                <tr>
                    <td>
                        <a class="text-heading font-semibold" href="#">
                            @i.Email
                        </a>
                    </td>
                    <td class="text-end">
                            <button type="button" class="btn btn-sm btn-square btn-neutral text-danger-hover">
                            <i class="bi bi-trash" onclick="deleteAdmin('@i.Id')"></i>
                        </button>
                            

                    </td>
                </tr>
                }
                
            </tbody>
        </table>
    </div>
    
</div>
<div class="modal fade" id="EmployerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Admin</h4>
                <button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">

                <div class="modal-body">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="Email" placeholder="Email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span><br />
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span><br />

                        <label>Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm Password" asp-for="CPassword">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-danger close-modal" data-dismiss="modal">Close</button>
            </div>
                   </form>
         
        </div>
    </div>
</div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}