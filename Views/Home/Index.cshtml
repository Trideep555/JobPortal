<!-- Top Jobs Section with Swiper.js -->
<section id="top-jobs" class="mt-3">
    <div class="container">
        <h2 class="text-center mb-4 seven">Top Jobs</h2>
        <div class="swiper">
            <div class="swiper-wrapper">
                @foreach(var i in ViewBag.jobs){
                <div class="swiper-slide">
                    <div class="card w-30 position-relative">
                            <img src="~/@i.Logo" class="card-img-top" alt="Job 1" style="height:50%;mix-blend-mode: multiply;">
                        <div class="card-body">
                                <h5 class="job-card-title">@i.JobTitle</h5>
                                
                                <div class="job-detail-buttons">
                                    <button class="search-buttons detail-button">@i.Jobtype</button>
                                    
                                    <button class="search-buttons detail-button">@i.JobExperience</button>
                                </div>
                                <div class="job-card-buttons position-fixed" style="bottom: 5%;left: 10%">
                                    <button class="search-buttons card-buttons" style="width:80%">Apply Now</button>
                                    
                                </div>
                           
                                
                          </div>
                    </div>
                </div>
                }
               
             
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination mt-4"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</section>
<section id="companies" class="mt-5">
