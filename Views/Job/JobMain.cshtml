<div class="job">
    <form method="post" asp-action="Find">

        <div class="wrapper">
       
        <div class="search-menu">
           
            <div class="search-bar">
                
            </div>
            <div class="search-location">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" />
                    <circle cx="12" cy="10" r="3" />
                </svg>
                    <input type="text name="location" class="search-box" autofocus placeholder="Location" value="" />

               
            </div>
            <div class="search-job">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-briefcase">
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
                    <path d="M16 21V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v16" />
                </svg>
                <select name="types">
                    <option value="Any">Job Type</option>
                    <option value="On Site">On Site</option>
                    <option value="Work From Home">Work From Home</option>
                    <option value="Internship">Internship</option>
                </select>
            </div>
            <div class="search-salary">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" fill="currentColor" stroke-width=".4">
                    <path d="M12.6 18H9.8a.8.8 0 010-1.5h2.8a.9.9 0 000-1.8h-1.2a2.4 2.4 0 010-4.7h2.8a.8.8 0 010 1.5h-2.8a.9.9 0 000 1.8h1.2a2.4 2.4 0 010 4.7z" stroke="currentColor" />
                    <path d="M12 20a.8.8 0 01-.8-.8v-2a.8.8 0 011.6 0v2c0 .5-.4.8-.8.8zM12 11.5a.8.8 0 01-.8-.8v-2a.8.8 0 011.6 0v2c0 .5-.4.8-.8.8z" stroke="currentColor" />
                    <path d="M21.3 23H2.6A2.8 2.8 0 010 20.2V3.9C0 2.1 1.2 1 2.8 1h18.4C22.9 1 24 2.2 24 3.8v16.4c0 1.6-1.2 2.8-2.8 2.8zM2.6 2.5c-.6 0-1.2.6-1.2 1.3v16.4c0 .7.6 1.3 1.3 1.3h18.4c.7 0 1.3-.6 1.3-1.3V3.9c0-.7-.6-1.3-1.3-1.3z" stroke="currentColor" />
                    <path d="M23.3 6H.6a.8.8 0 010-1.5h22.6a.8.8 0 010 1.5z" stroke="currentColor" />
                </svg>
                <select name="salary">
                    <option value="Any">Salary Range(LPA)</option>
                    <option value="0-4">0-4 LPA</option>
                    <option value="4-10">4-10</option>
                    <option value="10">10+</option>
                </select>
            </div>
            <button type="submit" class="search-button">Find Job</button>
            </form>

        </div> 
        <div class="main-container">
            <div class="search-type">
                <div class="job-time">
                    <div class="job-time-title">Type of Employment</div>
                    <div class="job-wrapper">
                        <div class="type-container">
                    <input type="radio" name="type" id="job1" class="job-style type" value="On Site" onclick="searchtype()" @(ViewBag.selecttypes != null ? ViewBag.selecttypes.Contains("On Site") == true ? "checked" : "" : "")>
                            <label for="job1">On Site</label>
                            <span class="job-number">@ViewBag.type[0]</span>
                        </div>
                        <div class="type-container">
                    <input type="radio" name="type" id="job2" class="job-style type" value="Work From Home" onclick="searchtype()" @(ViewBag.selecttypes != null ? ViewBag.selecttypes.Contains("Work From Home") == true ? "checked" : "" : "")>
                            <label for="job2">Work From Home</label>
                            <span class="job-number">@ViewBag.type[1]</span>
                        </div>
                        <div class="type-container">
                    <input type="radio" name="type" id="job3" class="job-style type" value="Internship" onclick="searchtype()" @(ViewBag.selecttypes != null ? ViewBag.selecttypes.Contains("Internship") == true ? "checked" : "" : "")>
                            <label for="job3">Internship</label>
                            <span class="job-number">@ViewBag.type[2]</span>
                        </div>
                         </div>
                </div>
                <div class="job-time">
                    <div class="job-time-title">Experience</div>
                    <div class="job-wrapper">
                        <div class="type-container">
                    <input type="radio" name="exp" id="job7" class="job-style exp" value="Fresher" onclick="searchtype()" @(ViewBag.selectexp != null ? ViewBag.selectexp.Contains("Fresher") == true ? "checked" : "" : "")>
                            <label for="job7" >Fresher(0-4)</label>
                            <span class="job-number">@ViewBag.exp[0]</span>
                        </div>
                        <div class="type-container">
                    <input type="radio" name="exp" id="job8" class="job-style exp" value="Mid-Level" onclick="searchtype()" @(ViewBag.selectexp != null ? ViewBag.selectexp.Contains("Mid-Level") == true ? "checked" : "" : "")>
                            <label for="job8">Mid Level(5-10)</label>
                            <span class="job-number">@ViewBag.exp[1]</span>
                        </div>
                        <div class="type-container">
                    <input type="radio" name="exp" id="job9" class="job-style exp" value="Senior" onclick="searchtype()" @(ViewBag.selectexp != null ? ViewBag.selectexp.Contains("Senior") == true ? "checked" : "" : "")>
                            <label for="job9">Senior(10+)</label>
                            <span class="job-number">@ViewBag.exp[2]</span>
                        </div>
                        </div>
                </div>
                <div class="job-time">
                    <div class="job-time-title">Salary Range</div>
                    <div class="job-wrapper">
                        <div class="type-container">
                    <input type="radio" name="sal" id="job10" class="job-style sal" value="0-4" onclick="searchtype()" @(ViewBag.selectsal != null ? ViewBag.selectsal.Contains("0-4") == true ? "checked" : "" : "")>
                            <label for="job10">0 - 4 LPA</label>
                            <span class="job-number">@ViewBag.sal[0]</span>
                        </div>
                        <div class="type-container">
                    <input type="radio" name="sal" id="job11" class="job-style sal" value="4-10" onclick="searchtype()" @(ViewBag.selectsal != null ? ViewBag.selectsal.Contains("4-10") == true ? "checked" : "" : "")>
                            <label for="job11">4-10LPA</label>
                            <span class="job-number">@ViewBag.sal[1]</span>
                        </div>
                        <div class="type-container">
                    <input type="radio" name="sal" id="job12" class="job-style sal" value="10+" onclick="searchtype()" @(ViewBag.selectsal != null ? ViewBag.selectsal.Contains("10+") == true ? "checked" : "" : "")>
                            <label for="job12">10+ LPA</label>
                            <span class="job-number">@ViewBag.sal[2]</span>
                        </div>
                         </div>
                </div>
            </div>
            <div class="searched-jobs">
                <div class="searched-bar">
                    
                </div>
                
                <div class="job-cards">
                    @foreach(var i in ViewBag.jobs){
                
                        <div class="job-card position-relative" style="height:280px"  data-target="@i.Id" data-logo="@i.Logo" data-company="@i.Company_Name" >
                        <div class="job-card-header">
                            <img src="~/@i.Logo" style="width:50px;height:50px" />
                            <div class="menu-dot"></div>
                        </div>
                        <h5 class="job-card-title">@i.JobTitle</h5>
                        <div class="job-card-subtitle">
                                @i.JobDescription.Substring(0,100)...
                        </div>
                        <div class="job-detail-buttons">
                            <button class="search-buttons detail-button">@i.Jobtype</button>
                           
                            <button class="search-buttons detail-button">@i.Jobsalary LPA</button>
                            <button class="search-buttons detail-button">@i.JobExperience</button>
                        </div>
                            <div class="job-card-buttons position-absolute" style="bottom:0px" >
                                @if (ViewBag.applied.Contains(i.CompanyId))
                                {
                                    <button class="search-buttons card-buttons">Applied</button>

                                }else{
                                <button class="search-buttons card-buttons">Apply Now</button>
                                }
                        </div>
                    </div>

                        
                    }
                    </div>
                    <div class="job-overview">
                        
                        <div class="job-explain">
                            <img class="job-bg" alt="">
                            <div class="job-logos">
                            <img src="#" id="logo" style="width:50px;height:50px" />
                            </div>
                            <div class="job-explain-content">
                                <div class="job-title-wrapper">
                                    <div class="job-card-title" id="title">UI /UX Designer</div>
                                    <div class="job-action d-flex gap-2">
                                        <form method="post" id="napply" asp-action="Apply">
                                            <input type="hidden" name="id" id="id" value="" />
                                        <input type="hidden" name="companyid" id="com_id" value="" />

                                    <button class="btn btn-primary" type="submit"><i class="fa-regular fa-square-check fa-xl cursor-pointer"></i>&nbsp;Apply</button>
                                    </form>
                                    <button class="btn btn-primary" id="apply" style="display:none" onclick="window.location.pathname='/Home/Profile'">Check Status</button>
                                    <i class="fa-regular fa-circle-xmark fa-xl cursor-pointer" onclick="closeit()"></i>
                                </div>

                                </div>
                                <div class="job-subtitle-wrapper">
                                    <div class="company-name" id="comp">Patreon <span class="comp-location">Londontowne, MD.</span></div>
                                    <div class="posted" id="date"></div>
                                </div>
                                <div class="explain-bar">
                                    <div class="explain-contents">
                                        <div class="explain-title" >Job Experience:</div>
                                        <div class="explain-subtitle" id="exp"></div>
                                    </div>
                                    <div class="explain-contents">
                                        <div class="explain-title">Job Type:</div>
                                        <div class="explain-subtitle" id="type">Senior level</div>
                                    </div>
                                    <div class="explain-contents">
                                        <div class="explain-title">Skills:</div>
                                        <div class="explain-subtitle" id="skills"></div>
                                    </div>
                                    <div class="explain-contents">
                                        <div class="explain-title">Offer Salary:</div>
                                        <div class="explain-subtitle" id="sal"></div>
                                    </div>
                                <div class="explain-contents">
                                    <div class="explain-title">Locations Offered:</div>
                                    <div class="explain-subtitle" id="loc"></div>
                                </div>
                                <div class="explain-contents">
                                    <div class="explain-title">Positions Left:</div>
                                    <div class="explain-subtitle" id="pos"></div>
                                </div>
                                </div>
                                <div class="overview-text">
                                    <div class="overview-text-header">Overview</div>
                                <div class="overview-text-subheader" id="desc" style="white-space: pre-wrap;word-wrap: break-word;"></div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="gap"></div>
<style>
    .explain-title{
        font-weight:bold;
        color:deepskyblue;
    }
</style>