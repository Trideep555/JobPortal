                        <p>
                            <a asp-controller="Home" asp-action="Index" asp-fragment="about" class="text-reset">About</a>
                        </p>
                        <p>
                                                       <a asp-controller="Home" asp-action="Index" asp-fragment="contact" class="text-reset">Contact</a>
